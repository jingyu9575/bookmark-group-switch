manifest_version: 2
browser_specific_settings:
	gecko:
		id: 'tabs-to-bookmark-groups@qw.thucfb.com'
		strict_min_version: '68.0'
name: '__MSG_extensionName__'
version: '0.1b2'
description: '__MSG_extensionDescription__'
icons:
	'48': 'icons/icon.svg'
permissions: [
	'storage'
	'tabs'
	'bookmarks'
	'sessions'
	'browserSettings'
	'menus'
	'menus.overrideContext'
	'unlimitedStorage'
	'contextualIdentities'
	'idle'
	'cookies'
]
browser_action:
	default_icon: 'icons/icon-color.svg#dark'
	theme_icons: [{
		light: 'icons/icon-color.svg#light'
		dark: 'icons/icon-color.svg#dark'
		size: 48
	}]
	default_title: '__MSG_extensionName__'
	default_popup: 'panel/panel.html?browserAction=1'
	browser_style: false
sidebar_action:
    default_icon: 'icons/icon.svg'
    default_title: '__MSG_extensionName__'
    default_panel: 'panel/panel.html'
    open_at_install: false
    browser_style: false
background:
	page: 'background/background.html'
options_ui:
	page: 'options/options.html'
	browser_style: false
default_locale: 'en'
